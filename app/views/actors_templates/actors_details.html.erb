<h1>
  Actor #<%= @actor_id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/504" class="btn btn-block btn-outline-secondary">
  Delete actor
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @actors.where({ :id => @actor_id}).at(0).name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @actors.where({ :id => @actor_id}).at(0).dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actors.where({ :id => @actor_id}).at(0).bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src=<%= @actors.where({ :id => @actor_id}).at(0).image %> style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @actors.where({ :id => @actor_id}).at(0).created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @actors.where({ :id => @actor_id}).at(0).updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>
  
  <% @characters.where({:actor_id => @actor_id}).each do |character| %>
    <tr>
      <td>
        <%= @films.where({:id => character.movie_id}).at(0).title %>
      </td>

      <td>
        <%= @films.where({:id => character.movie_id}).at(0).year %>
      </td>

      <td>


        <%= @directors.where({:id => character.movie_id}).at(0).name%>

        
      </td>

      <td>
        <%= character.name%>
      </td>


      <td>
        <a href="/movies/<%= @films.where({:id => character.movie_id}).at(0).id %>">
          Show details
        </a>
      </td>
    </tr>
    <% end %>
</table>

  </body>
</html>