  <body>
    <h1>
      Director # <%= @director_id %> details
    </h1>

    <a href="/directors" class="btn btn-block btn-outline-secondary">
      Go back
    </a>

    &nbsp;|&nbsp;

    <a href="/delete_director/4027" class="btn btn-block btn-outline-secondary">
      Delete director
      <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
    </a>

    <hr>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @directors.where({ :id => @director_id}).at(0).name %>
      </dd>

      <dt>
        Dob
      </dt>
      <dd>
        <%= @directors.where({ :id => @director_id}).at(0).dob %>
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @directors.where({ :id => @director_id}).at(0).bio %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @directors.where({ :id => @director_id}).at(0).image %>" style="width:250px;">
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= @directors.where({ :id => @director_id}).at(0).created_at %>
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= @directors.where({ :id => @director_id}).at(0).updated_at %>
      </dd>
    </dl>

    <hr>

    <h2>Filmography</h2>

    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Image
        </th>

        <th>
          Title
        </th>

        <th>
          Year
        </th>

        <th>
          Director
        </th>

        <th>
        </th>
      </tr>

    <% @films.where({:director_id => @director_id}).each do |films| %>
      <tr>
        
        <td>
          <%= films.id%>
        </td>

        <td>
          <img src="<%= films.image %>" style="width:250px;">
        </td>

        <td>
          <%= films.title %>
        </td>

        <td>
          <%= films.year %>
        </td>

        <td>
          <%= @directors.where({ :id => @director_id}).at(0).name %>
        </td>

        <td>
          <a href="/movies/<%= films.id%>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

      </body>
    </html>
